{
    "name": "zonuexe/phpstan-safephp-lite",
    "description": "A simple PHPStan extension for Safe PHP functions",
    "license": "Apache-2.0",
    "require": {
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "php": ">=8.2",
        "phpunit/phpunit": "^11.5",
        "symplify/easy-coding-standard": "^12.5",
        "thecodingmachine/safe": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "zonuexe\\PHPStan\\SafePHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "zonuexe\\PHPStan\\SafePHP\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
